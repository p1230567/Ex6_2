<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/bmi_cul">

    <TextView android:text="身高(公尺 M)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hight" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_hight"
        android:layout_below="@+id/tv_hight"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="體重(公斤 KG)"
        android:id="@+id/tv_weight"
        android:layout_below="@+id/et_hight"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_weight"
        android:layout_below="@+id/tv_weight"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送出"
        android:id="@+id/btn_sumbit"
        android:layout_below="@+id/et_weight"
        android:layout_alignParentStart="true"
        android:layout_marginTop="139dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除"
        android:id="@+id/btn_clear"
        android:layout_alignTop="@+id/btn_sumbit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp" />

</RelativeLayout>